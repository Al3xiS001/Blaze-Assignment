  
<%- include ('partials/_header') -%>

<div class="container">
    <!-- LIST -->
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table table-bordered table-hover">
            <thead>
                <tr>
                <th>NÂ°</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < tasks.length; i++) { %>
                <tr>
                    <td><%= (current-1)*n + i + 1%></td>
                    <td><%= tasks[i]["First Name"] %></td>
                    <td><%= tasks[i]["Last Name"] %></td>
                    <td><%= tasks[i]["Email"] %></td>
                    <td><%= tasks[i]["Phone Number"] %></td>
                    <td>
                    <a href="/delete/<%= tasks[i]._id %>"
                        class="btn btn-danger">
                        Delete
                    </a>
                    <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">
                        Edit
                    </a>
                    </td>
                </tr>
                <% } %>
            </tbody>
            </table>
        </div>
    </div>

  <div class="row">
    <!-- pagination -->
    <% if(pages > 0) { %> <!-- show pagination if there is pages -->
      <nav class="mx-auto">
        <ul class="pagination">
          <!-- FIRST ITEM -->
          <% if(current == 1) { %>
            <li class="page-item disabled">
              <a class="page-link" href="#">First</a>
            </li>
          <% } else { %>
            <li class="page-item">
              <a class="page-link" href="/customers/1">First</a>
            </li>
          <% } %>
          <!-- ITEMS  -->
          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if(i !== 1) { %>
            <li class="page-item disabled">
              <a class="page-link" href="#">...</a>
            </li>
          <% } %>
          <% for(; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if(i == current) { %>
              <li class="page-item active">
                <a class="page-link" href="<%= i %>">
                  <%= i %>
                </a>
              </li>
            <% } else { %>
              <li class="page-item">
                <a class="page-link" href="/customers/<%= i %>">
                  <%= i %>
                </a>
              </li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
               <li class="page-item disabled">
                 <a class="page-link" href="#">...</a>
               </li>
            <% } %>
          <% } %>
          <!-- LAST ITEM -->
          <% if(current == pages) { %>
            <li class="page-item disabled">
              <a class="page-link" href="#">
                Last
              </a>
            </li>
          <% } else { %>
            <li class="page-item">
              <a class="page-link" href="/customers/<%= pages %>">
                Last
              </a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } %>
  </div>
</div>


<%- include('partials/_footer') -%>