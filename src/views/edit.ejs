<%- include('partials/_header') -%>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h2>Update a Customer</h2>
          <form action="/edit/<%= task._id %>" method="post">
            <div class="form-group">
              <label for="First Name">First Name:</label>
              <input class="form-control" type="text" name="First Name" placeholder="First Name" value="<%= task['First Name'] %>">
            </div>
            <div class="form-group">
              <label for="Last Name">Last Name:</label>
              <input class="form-control" type="text" name="Last Name" placeholder="Last Name" value="<%= task['Last Name'] %>">
            </div>
            <div class="form-group">
              <label for="Email">Email:</label>
              <input class="form-control" type="text" name="Email" placeholder="Email" value="<%= task['Email'] %>">
            </div>
            <div class="form-group">
              <label for="Phone Number">Phone Number:</label>
              <input class="form-control" type="text" name="Phone Number" placeholder="Phone Number" value="<%= task['Phone Number'] %>" >
            </div>
            <button class="btn btn-primary" type="submit">
              Update 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/_footer') -%>